{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "excludeExternals": true,
    "out": "../wafer-docs/api"
  }
}
